.music_play{
  width: 20rpx;
  height: 80rpx;
  left: 65%;
  top: 10rpx;
  transform-origin: top;
}
.playIcon{
  animation: rotate 5s linear infinite 1s;
}
.playImg{
  animation: start 1s linear forwards;
}
.pauseImg{
  animation: stop 1s linear forwards;
}
@keyframes rotate{
  0%{transform: rotate(0deg)}
  100%{transform: rotate(360deg)}
}
@keyframes start{
  0%{transform: rotate(0deg)}
  100%{transform: rotate(30deg)}
}
@keyframes stop{
  0%{transform: rotate(30deg)}
  100%{transform: rotate(0deg)}
}